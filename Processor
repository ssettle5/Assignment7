public class Processor extends Thread {
    private static int nextId = 1;
    private int id;
    private Inventory queue;
    private int numberOfOrders;
    private double revenue;

    public Processor(Inventory queue) {
        this.id = nextId++;
        this.queue = queue;
        this.numberOfOrders = 0;
        this.revenue = 0;
    }

    public void run() {
        System.out.println("OrderProcessor " + id + " starting order processing...");
        while (true) {
            Item item = queue.retrieveItem();
            if (item == null) {
                break;
            }
            queue.incrementBalance(item.cost);
            revenue += item.cost;
            numberOfOrders++;
        }
        System.out.printf("OrderProcessor %d processed a total of %d orders for a total of $%.2f\n",
                id, numberOfOrders, revenue);
    }
}
